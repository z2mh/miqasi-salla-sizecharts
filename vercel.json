{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/dashboard",
      "dest": "/api/dashboard.js"
    },
    {
      "src": "/widget.js",
      "dest": "/public/store-widget.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/dashboard.js"
    }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node@18"
    }
  }
}